# Environment variables for UI Testing Framework

# Database Configuration
DATABASE_URL=sqlite:///./ui_testing_framework.db
ASYNC_DATABASE_URL=sqlite+aiosqlite:///./ui_testing_framework.db

# For production, use PostgreSQL:
# DATABASE_URL=postgresql://username:password@localhost/ui_testing_framework
# ASYNC_DATABASE_URL=postgresql+asyncpg://username:password@localhost/ui_testing_framework

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=true

# Web Scraping Configuration
SCRAPING_TIMEOUT=30
BROWSER_HEADLESS=true
MAX_CONCURRENT_SCRAPES=3

# AI Configuration
LLAMA_CONTAINER_NAME=ui-testing-llama
LLAMA_MODEL_PATH=/models/llama
USE_AI_FALLBACK=true

# Test Configuration
SCREENSHOT_DIR=./screenshots
MAX_TEST_DURATION=300
CLEANUP_OLD_SCREENSHOTS=true

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
